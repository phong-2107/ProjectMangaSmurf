@model IEnumerable<ProjectMangaSmurf.Models.BoTruyen>

@using ProjectMangaSmurf.Repository
@inject IboTruyenRepository boTruyenRepository
@inject IChapterRepository chapterRepository

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Danh Sách Bộ Truyện</h4>
            <h6>Quản Lý danh sách bộ truyện </h6>
        </div>  
    </div>
    <div class="page-btn">
        <a asp-area="Admin" asp-controller="BoTruyenManager" asp-action="Add" class="btn btn-added">
            <img src="~/img/icons/plus.svg" alt="img"
                 class="me-1">Thêm mới bộ truyện
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-top">
                <div class="search-set">
                    <div class="search-path">
                        <a class="btn btn-filter" id="filter_search">
                            <img src="~/img/icons/filter.svg" alt="img">
                            <span><img src="~/img/icons/closes.svg" alt="img"></span>
                        </a>
                    </div>
                    <div class="search-input">
                        <a class="btn btn-searchset">
                            <img src="~/img/icons/search-white.svg" alt="img">
                        </a>
                    </div>
                </div>
                <div class="wordset">
                    <ul>
                        <li>
                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf">
                                <img src="~/img/icons/pdf.svg" alt="img">
                            </a>
                        </li>
                        <li>
                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel">
                                <img src="~/img/icons/excel.svg" alt="img">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card mb-0" id="filter_inputs">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12">
                            <div class="row">
                                <div class="col-lg col-sm-6 col-12">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Choose Product</option>
                                            <option>Macbook pro</option>
                                            <option>Orange</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg col-sm-6 col-12">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Choose Category</option>
                                            <option>Computers</option>
                                            <option>Fruits</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg col-sm-6 col-12">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Choose Sub Category</option>
                                            <option>Computer</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg col-sm-6 col-12">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Brand</option>
                                            <option>N/D</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg col-sm-6 col-12 ">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Price</option>
                                            <option>150.00</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-1 col-sm-6 col-12">
                                    <div class="form-group">
                                        <a class="btn btn-filters ms-auto">
                                            <img src="~/img/icons/search-whites.svg" alt="img">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table  datanew">
                    <thead>
                        <tr>
                            <th>
                                <label class="checkboxs">
                                    <input type="checkbox" id="select-all">
                                    <span class="checkmarks"></span>
                                </label>
                            </th>
                            <th>ID Truyện</th>
                            <th>Tên truyện</th>
                            <th>Độ tuổi</th>
                            <th>Tác Giả</th>
                            <th>Tổng Đánh Giá</th>
                            <th>Tổng lượt xem</th>
                            <th>Loại Truyện</th>
                            @* <th>Ảnh bìa</th>
                            <th>Ảnh banner<th> *@
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var i in Model)
                            {
                            <tr>
                                @{
                                    var tg = boTruyenRepository.getNameTGById(i.IdTg);
                                    var listloai = string.Join(",", i.listloai);
                                }
                                <td>
                                    <label class="checkboxs">
                                        <input type="checkbox">
                                        <span class="checkmarks"></span>
                                    </label>
                                </td>
                                <td>@i.IdBo</td>
                                <td>@i.TenBo</td>
                                <td>@i.Dotuoi</td>
                                
                                <td>@tg</td>
                                <td>@i.TkDanhgia</td>
                                <td>@i.TongLuotXem</td>
                                <td>@listloai</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="BoTruyenManager" asp-action="Detail" asp-route-id="@i.IdBo" class="me-3">
                                        <img src="~/img/icons/eye.svg" alt="img">
                                    </a>
                                    <a asp-area="Admin" asp-controller="BoTruyenManager" asp-action="Update" asp-route-id="@i.IdBo" class="me-3 ">
                                        <img src="~/img/icons/edit.svg" alt="img">
                                    </a>
                                    <a class="delete-product me-3" data-product-id="@i.IdBo" href="javascript:void(0);">
                                        <img src="~/img/icons/delete.svg" alt="img">
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



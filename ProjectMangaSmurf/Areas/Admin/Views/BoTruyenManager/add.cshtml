@model ProjectMangaSmurf.Models.BoTruyen
@using Microsoft.AspNetCore.Mvc.Rendering

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
   .preview {
    display: block; /* Ensures the preview is always visible for adjustment */
    max-width: 100%; /* Limits the width to the parent container */
    max-height: 140px; /* Sets a maximum height for the image */
    object-fit: contain; /* Ensures the aspect ratio is maintained without cropping */
    border-radius: 5px; /* Optional: rounds the corners of the image */
}

.image-uploads {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 150px; /* Fixed height */
    width: 100%; /* Ensures it takes up full width of its parent */
    border: 2px dashed #ccc;
    border-radius: 5px;
    background: #f8f8f8;
    color: #ccc;
    cursor: pointer;
    position: relative; /* Needed for absolute positioning of imgInput */
    overflow: hidden; /* Ensures no overflow of the child elements */
}

.imgInput {
    opacity: 0;
    position: center;
    width: 100%; /* Cover the entire area of the parent */
    height: 100%; /* Cover the entire area of the parent */
    top: ;
    left: 0;
    cursor: pointer;
}

.image-uploads:hover {
    background-color: #e9e9e9; /* Lighter background on hover for better UI interaction */
}

    .col-lg-6, .col-lg-3 {
        padding: 0 15px; /* Adding padding to ensure spacing */
        margin-bottom: 20px; /* Spacing between rows */
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    /* Additional styles to ensure buttons are aligned and visible */
    .btn {
        padding: 10px 20px;
        margin: 5px 0; /* Reduced margin */
        width: auto; /* Ensures buttons do not stretch */
    }
</style>


<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Add a Newest Comic</h4>
            <h6>Place the Comic Infographics</h6>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form asp-action="Add" method="post" enctype="multipart/form-data" class="row">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="TenBo">Comic Name</label>
                        <input asp-for="TenBo" type="text" placeholder="Put a name ">
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="listloai">Types of this Comic</label>
                        <select asp-for="listloai" asp-items="@ViewBag.types" multiple class="select" placeholder="Add 1 or more types">
                            <option value="0">Add a New types </option>
                        </select>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="IdTg">Author</label>
                        <select id="authorDropdown" asp-for="IdTg" asp-items="@ViewBag.TGs" class="select">
                            <option value="0">Add an Author</option> <!-- Make sure to assign a value to the option -->
                        </select>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <label asp-for="Dotuoi">Age Rating</label>
                    <select asp-for="Dotuoi" class="select">
                        <option value ="0">0-[E] Everyone</option>
                        <option value="3">[C] Child 3+</option>
                        <option value="12">[T] Teenagers</option>
                        <option value="16">[R] Violent-Sexually</option>
                        <option value="18">[R18] Audutl only</option>
                    </select>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <label asp-for="TtPemium">Premium stats</label>
                    <select asp-for="TtPemium" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>

                    </select>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <label asp-for="Active">Active stats</label>
                    <select asp-for="Active" class="select">
                        <option>true</option>
                        <option>false</option>
                    </select>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <label asp-for="TrangThai">Publish </label>
                    <select asp-for="TrangThai" class="select">
                        <option value="0">0-End/Finish</option>
                        <option value="1">1-Updating</option>
                        <option value="3">2-Coming Soon</option>
                        <option value="3">3-Stopped Publish</option>
                    </select>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="Mota">Description</label>
                        <textarea asp-for="Mota" class="form-control"></textarea>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="TkDanhgia">Initial Total Rating</label>
                        <input asp-for="TkDanhgia" type="number" step="0.1" class="form-control" placeholder="Enter initial total rating" />
                        <span asp-validation-for="TkDanhgia" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="TkTheodoi">Initial Total Follows</label>
                        <input asp-for="TkTheodoi" type="number" class="form-control" placeholder="Enter initial total follows" />
                        <span asp-validation-for="TkTheodoi" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="TkTheodoi">Initial Total Follows</label>
                        <input asp-for="TkTheodoi" type="number" class="form-control" placeholder="Enter initial total follows" />
                        <span asp-validation-for="TkTheodoi" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6">
                    <div class="form-group">
                        <label for="AnhBanner">Ảnh Banner</label>
                        <div class="image-upload">
                            <input type="file" id="AnhBanner" class="imgInput" data-target="preview1">
                            <div class="image-uploads">
                                <img src="~/img/icons/upload.svg" alt="Upload Icon">
                                <h4>Chọn Ảnh Banner</h4>
                            </div>
                            <img class="preview" id="preview1" src="#" alt="Preview Image">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6">
                    <div class="form-group">
                        <label for="AnhBia">Ảnh Poster</label>
                        <div class="image-upload">
                            <input type="file" id="AnhBia" class="imgInput" data-target="preview2">
                            <div class="image-uploads">
                                <img src="~/img/icons/upload.svg" alt="Upload Icon">
                                <h4>Chọn Ảnh Poster</h4>
                            </div>
                            <img class="preview" id="preview2" src="#" alt="Preview Image">
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button type="button" class="btn btn-secondary" onclick="window.history.back();">Cancel</button>
                </div>
                <div asp-validation-summary="ModelOnly" class="col-lg-12 p-4 text-danger" style="font-size:20px; font-weight:600"> </div>
            </form>
        </div>
    </div>
</div>
<script>

    document.getElementById('authorDropdown').addEventListener('change', function () {
        // Check if the selected option is "Add an Author"
        if (this.value === '0') { // assuming value 0 corresponds to "Add an Author"
            window.location.href = '/AuthorManager/Add'; 
        }
    });
    document.getElementById('listloai').addEventListener('change', function () {

        if (this.value === '0') { 
            window.location.href = '/ComicTypeManager/Add';
        }
    });
    function readURL(input, targetID) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                var preview = $('#' + targetID);
                preview.attr('src', e.target.result);
                preview.show(); // Show the preview
                preview.siblings('.image-uploads').hide(); // Hide the placeholder
            }
            reader.readAsDataURL(input.files[0]);
        } else {
            var preview = $('#' + targetID);
            preview.hide();
            preview.siblings('.image-uploads').show();
        }
    }

    $(document).ready(function () {
        $(".imgInput").change(function () {
            var targetID = $(this).data('target');
            readURL(this, targetID);
        });
    });
</script>


                    
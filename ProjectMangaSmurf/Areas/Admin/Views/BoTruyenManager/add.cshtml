@model ProjectMangaSmurf.Models.BoTruyen
@using Microsoft.AspNetCore.Mvc.Rendering

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    .preview {
        display: none; /* Initially hidden, shown when file is loaded */
        width: 100%; /* Ensure it covers the area */
        height: 100%; /* Ensure it covers the area */
        object-fit: contain; /* Image will be scaled to maintain its aspect ratio while fitting within the element’s content box */
        border-radius: 5px; /* Rounded corners */
    }

    .image-upload {
        position: relative;
        width: 500px; /* Fixed width */
        height: 500px; /* Fixed height */
        border: 2px dashed #ccc;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f8f8;
        overflow: hidden;
    }

    .image-uploads {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: rgba(255, 255, 255, 0.75); /* Slightly transparent white background */
        z-index: 1; /* Above the image */
    }

    .imgInput {
        opacity: 0;
        position: absolute;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .image-uploads:hover {
        background-color: #e9e9e9; /* Lighter background on hover for better UI interaction */
    }

    .col-lg-6, .col-lg-3 {
        padding: 0 15px; /* Adding padding to ensure spacing */
        margin-bottom: 20px; /* Spacing between rows */
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .btn {
        padding: 10px 20px;
        margin: 5px 0;
        width: auto; /* Ensures buttons do not stretch */
    }
</style>



<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Add a Newest Comic</h4>
            <h6>Place the Comic Infographics</h6>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form asp-action="Add" method="post" enctype="multipart/form-data" class="row">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="TenBo">Comic Name</label>
                        <input asp-for="TenBo" type="text" placeholder="Put a name ">
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="listloai">Types of this Comic</label>
                        <select asp-for="listloai" asp-items="@ViewBag.types" multiple="multiple" class="select" name="listloai">
                            @foreach (var type in ViewBag.types)
                            {
                                <option value="@type.Value">@type.Text</option>
                            }
                        </select>

                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="IdTg">Author</label>
                        <select id="authorDropdown" asp-for="IdTg" asp-items="@ViewBag.TGs" class="select">
                            <option value="0">Add an Author</option> <!-- Make sure to assign a value to the option -->
                        </select>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <label asp-for="Dotuoi">Age Rating</label>
                    <select asp-for="Dotuoi" class="select">
                        <option value ="0">[E] Everyone</option>
                        <option value="3">[C] Child 3+</option>
                        <option value="12">[T] Teenagers</option>
                        <option value="16">[R] Violent-Sexually</option>
                        <option value="18">[R18] Audutl only</option>
                    </select>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <label asp-for="TtPemium">Premium stats</label>
                    <select asp-for="TtPemium" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>

                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <label asp-for="Active">Active stats</label>
                    <select asp-for="Active" class="select">
                        <option>true</option>
                        <option>false</option>
                    </select>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <label asp-for="TrangThai">Publish </label>
                    <select asp-for="TrangThai" class="select">
                        <option value="0">0-End/Finish</option>
                        <option value="1">1-Updating</option>
                        <option value="3">2-Coming Soon</option>
                        <option value="3">3-Stopped Publish</option>
                    </select>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="Mota">Description</label>
                        <textarea asp-for="Mota" class="form-control"></textarea>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="TkDanhgia">Initial Total Rating</label>
                        <input asp-for="TkDanhgia" type="number" step="0.1" class="form-control" placeholder="Enter initial total rating" />
                        <span asp-validation-for="TkDanhgia" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="TkTheodoi">Initial Total Follows</label>
                        <input asp-for="TkTheodoi" type="number" class="form-control" placeholder="Enter initial total follows" />
                        <span asp-validation-for="TkTheodoi" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="TkTheodoi">Initial Total Follows</label>
                        <input asp-for="TkTheodoi" type="number" class="form-control" placeholder="Enter initial total follows" />
                        <span asp-validation-for="TkTheodoi" class="text-danger"></span>
                    </div>
                </div>
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label for="AnhBanner">Banner</label>
                            <div class="image-upload">
                                <input type="file" id="AnhBanner" name="AnhBanner" class="imgInput" data-target="preview1">
                                <div class="image-uploads">
                                    <img src="~/img/icons/upload.svg" alt="Upload Icon">
                                    <h4>Upload Banner</h4>
                                </div>
                            <input type="file" id="AnhBanner" name="AnhBanner" class="imgInput" data-target="preview1">
                            <img class="preview" id="preview1" src="#" alt="Preview Image">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label for="AnhBia">Poster</label>
                            <div class="image-upload">
                                <input type="file" id="AnhBia" name="AnhBia" class="imgInput" data-target="preview2">
                                <div class="image-uploads">
                                    <img src="~/img/icons/upload.svg" alt="Upload Icon">
                                    <h4>Upload Poster</h4>
                                </div>
                            <input type="file" id="AnhBia" name="AnhBia" class="imgInput" data-target="preview2">
                            <img class="preview" id="preview2" src="#" alt="Preview Image">
                            </div>
                        </div>

                    </div>

                <div asp-validation-summary="ModelOnly" class="col-lg-12 p-4 text-danger" style="font-size:20px; font-weight:600"> </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button type="button" class="btn btn-secondary" onclick="window.history.back();">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.imgInput').change(function () {
            var targetID = $(this).data('target'); // Corresponds to the preview image ID
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var previewElement = $('#' + targetID);
                    previewElement.attr('src', e.target.result);
                    previewElement.show(); // Show the preview
                    previewElement.siblings('.image-uploads').hide(); // Hide the overlay
                }
                reader.readAsDataURL(this.files[0]);
            }
        });

        $("#AnhBanner").change(function () {
            readURL(this, 'preview1');
        });

        $("#AnhBia").change(function () {
            readURL(this, 'preview2');
        });


        $('form').on('submit', function (e) {
            e.preventDefault();

            var formData = new FormData(this); // Create FormData from the form

            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: formData,
                contentType: false, // Required for `FormData`
                processData: false, // Required for `FormData`
                success: function (response) {
                    if (response.success) {
                        alert('Form submitted successfully!');
                        window.location.href = response.redirectUrl;
                    } else {
                        alert(response.message);
                    }
                },
                error: function (xhr) {
                    alert('Error: ' + xhr.responseText);
                }
            });
        });

    });
</script>


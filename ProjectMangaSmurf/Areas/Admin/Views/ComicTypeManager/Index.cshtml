@model IEnumerable<ProjectMangaSmurf.Models.LoaiTruyen>

@using ProjectMangaSmurf.Repository
@inject IComicTypeRepository typeRepo
@inject IboTruyenRepository boTruyenRepository

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>


<div class="content">
    <div class="page-header d-flex justify-content-between align-items-center">
        <div class="page-title">
            <h4>Danh Sách Loại Truyện</h4>
            <h6>Quản lý danh sách loại truyện</h6>
        </div>
        <div class="page-btn">
            <a asp-area="Admin" asp-controller="ComicType" asp-action="Add" class="btn btn-added">
                <img src="~/img/icons/plus.svg" alt="img" class="me-1"> Add New Type
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-top">
                <div class="search-set">
                    <div class="search-path">
                        <a class="btn btn-filter" id="filter_search">
                            <img src="~/img/icons/filter.svg" alt="img">
                            <span><img src="~/img/icons/closes.svg" alt="img"></span>
                        </a>
                    </div>
                    <div class="search-input">
                        <a class="btn btn-searchset">
                            <img src="~/img/icons/search-white.svg" alt="img">
                        </a>
                    </div>
                </div>
                <div class="wordset">
                    <ul>
                        <li>
                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf">
                                <img src="~/img/icons/pdf.svg" alt="img">
                            </a>
                        </li>
                        <li>
                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel">
                                <img src="~/img/icons/excel.svg" alt="img">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card mb-0" id="filter_inputs">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12">
                            <div class="row">
                                <div class="col-lg col-sm-6 col-12">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Choose Product</option>
                                            <option>Macbook pro</option>
                                            <option>Orange</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg col-sm-6 col-12">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Choose Category</option>
                                            <option>Computers</option>
                                            <option>Fruits</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg col-sm-6 col-12">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Choose Sub Category</option>
                                            <option>Computer</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg col-sm-6 col-12">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Brand</option>
                                            <option>N/D</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg col-sm-6 col-12 ">
                                    <div class="form-group">
                                        <select class="select">
                                            <option>Price</option>
                                            <option>150.00</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-1 col-sm-6 col-12">
                                    <div class="form-group">
                                        <a class="btn btn-filters ms-auto">
                                            <img src="~/img/icons/search-whites.svg" alt="img">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table datanew">
                    <thead>
                        <tr>
                            <th>ID Type</th>
                            <th>Name of Type</th>
                            <th>Number of Series</th>
                            <th>Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var type in Model)
                        {
                            var count = await boTruyenRepository.CountByComicTypeId(type.IdLoai); // Async calls in view are not recommended
                            <tr>
                                <td>@type.IdLoai</td>
                                <td>@type.TenLoai</td>
                                <td>@count</td> <!-- Displaying the count -->
                                <th>@type.Active</th>
                                <td>
                                    <a asp-area="Admin" asp-controller="ComicTypeManager" asp-action="Detail" asp-route-id="@type.IdLoai" class="class=" me-3">
                                        <img src="~/img/icons/eye.svg" alt="img">
                                    </a>
                                    <a asp-area="Admin" asp-controller="ComicTypeManager" asp-action="Edit" asp-route-id="@type.IdLoai" class="class=" me-3">
                                        <img src="~/img/icons/edit.svg" alt="img">
                                    </a>
                                    <a asp-area="Admin" asp-controller="ComicTypeManager" asp-action="Delete" asp-route-id="@type.IdLoai" class="class=" me-3">
                                        <img src="~/img/icons/delete.svg" alt="img">
                                    </a>
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

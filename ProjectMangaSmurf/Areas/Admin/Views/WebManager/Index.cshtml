                                    <i class="fa-solid fa-toggle-@(config.Active ?? false ? "on" : "off")"></i>
                                    @(config.Active ?? false ? "Active" : "Inactive")
                                </button>
                            </td>
                            <td class="d-flex justify-content-between align-items-center">

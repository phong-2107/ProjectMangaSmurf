<!DOCTYPE html>
@inject IHttpContextAccessor HttpContextAccessor
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ManagSmurf Admin</title>

    <link rel="icon" type="image/png" href="~/images/icon logo.png">

    @*----------------- STYLE CSS FILE ------------------ *@
    <link href="~/css/animate.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/css/datatables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/js/owlcarousel/owl.carousel.min.css" rel="stylesheet" />
    <!-- In your _Layout.cshtml head section -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <link href="~/css/select2.min.css" rel="stylesheet" />

    <link href="~/css/styleadmin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
]
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left active">
                <a class="logo" asp-area="Admin" asp-controller="BoTruyenManager" asp-action="Index">
                    <img src="/img/logo1.png" alt="">
                </a>
                <a class="logo-small" asp-area="Admin" asp-controller="BoTruyenManager" asp-action="Index">
                    <img src="/img/iconManga.png" alt="">
                </a>
                <a id="toggle_btn" href="javascript:void(0);"></a>
            </div>
            <a id="mobile_btn" class="mobile_btn" href="#sidebar">
                <span class="bar-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
            </a>
            <ul class="nav user-menu" style="height:100%; justify-content:center">
                <li class="nav-item">
                    @Html.Partial("_LoginPartial")
                    @if (User.Identity.IsAuthenticated && HttpContextAccessor.HttpContext.Session.GetString("AdminSession") != null)
                    {
                        <form asp-controller="AdminLogin" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-danger">Logout</button>
                        </form>
                    }

                </li>
            </ul>
            <div class="dropdown mobile-user-menu">
                <a href="javascript:void(0);" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-ellipsis-v"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item">My Profile</a>
                    <a class="dropdown-item">Settings</a>
                    <a class="dropdown-item">Logout</a>
                </div>
            </div>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="active">
                            <a asp-area="Admin" asp-controller="BoTruyenManager" asp-action="Index">
                                <img src="/img/icons/dashboard.svg" alt="img">
                                <span>DashBoard</span>
                            </a>
                        </li>
                        <li class="submenu" style="text-decoration:none;">
                            <a>
                                <img src="/img/icons/product.svg" alt="img">
                                <span> Upload Data</span>
                                <span class="menu-arrow"></span>
                            </a>
                            <ul>
                                <li>
                                    <a asp-area="Admin" asp-controller="BoTruyenManager" asp-action="Add">Add New Comic</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="AuthorManager" asp-action="Add">Upload Author</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="ComicTypeManager" asp-action="Add">Upload Comic Type</a>
                                </li>
                                    <li>
                                    <a asp-area="Admin" asp-controller="StaffManager" asp-action="Add">Upload User-Staff</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="ServiceManager" asp-action="Add">Upload Service</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="AdsManager" asp-action="Add">Upload Ads</a>
                                </li>
                            </ul>
                        </li>
                        <li class="submenu" style="text-decoration:none;">
                            <a>
                                <img src="/img/icons/time.svg" alt="img">
                                <span> Manage Service Data</span>
                                <span class="menu-arrow"></span>
                            </a>
                            <ul>
                                <li>
                                    <a asp-area="Admin" asp-controller="BoTruyenManager" asp-action="ViewList">Manage Comics List</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="AuthorManager" asp-action="Index">Manage Author List</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="ComicTypeManager" asp-action="Index">Manage Comic-Types List</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="ServiceManager" asp-action="Index">Manage Service Pack</a>
                                </li>

                                        <li>
                                            <a asp-area="Admin" asp-controller="CusManager" asp-action="ViewList">Manage Customers List</a>
                                        </li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="CusManager" asp-action="ViewOrderList">Manage Payment-Order List</a>
                                        </li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="StaffManager" asp-action="Index">Manage Staffs List</a>
                                        </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="AdsManager" asp-action="Index">Manage Ads & Parner Data</a>
                                </li>

                            </ul>
                        </li>
                        <li class="submenu" style="text-decoration:none;">
                            <a>
                                <img src="/img/icons/settings.svg" alt="img">
                                <span> Manage Config</span>
                                <span class="menu-arrow"></span>
                            </a>
                            <ul>
                                <li>
                                    <a asp-area="Admin" asp-controller="StaffManager" asp-action="RBAC">Role-Base Config List</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="WebManager" asp-action="Edit">Webiste Config List </a>
                                </li>
                            <ul>
                         </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <div id="global-loader">
                <div class="whirly-loader"></div>
            </div>
            @RenderBody()
        </div>
    </div>


    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/feather.min.js"></script>
    <script src="~/js/jquery.slimscroll.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/apexchart/apexcharts.min.js"></script>
    <script src="~/plugins/apexchart/chart-data.js"></script>
    <script src="~/js/select2.min.js"></script>
    <script src="~/js/custom-select.js"></script>

    <script src="~/js/owlcarousel/owl.carousel.min.js"></script>

    <script src="~/js/sweetalert/sweetalerts.min.js"></script>
    <script src="~/js/sweetalert/sweetalert2.all.min.js"></script>
    @*----------------- SCRIPT ADMIN ------------------ *@
    <script src="~/js/scriptAdmin.js"></script>

    <script>
        $(document).ready(function () {
            $('.delete-product').click(function () {
                var productId = $(this).data('product-id');
                Swal.fire({
                    title: "Are you sure?",
                    text: `Delete Comic ID ${productId}`,
                    type: "warning",
                    showCancelButton: !0,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!",
                    confirmButtonClass: "btn btn-primary",
                    cancelButtonClass: "btn btn-danger ml-1",
                    buttonsStyling: !1

                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: `/Admin/BoTruyenManager/DeleteConfirmed/${productId}`,
                            type: 'POST',
                            data: { id: productId },
                            success: function (response) {
                                Swal.fire(
                                    'Deleted!',
                                    'Successfully',
                                    'success'
                                );
                                location.reload();
                            },
                            error: function (xhr, status, error) {
                                // Xử lý lỗi nếu cần
                                console.error(xhr.responseText);
                            }
                        });
                    }
                });
            });
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
